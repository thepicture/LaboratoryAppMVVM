<UserControl x:Class="LaboratoryAppMVVM.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryAppMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox>
            <StackPanel>
            <TextBlock Text="Пожалуйста, авторизуйтесь в системе"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Style="{StaticResource CommonBlock}"></TextBlock>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Логин: "
                           Style="{StaticResource CommonBlock}"></TextBlock>
                <TextBox Text="{Binding LoginText}"
                         Width="200"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Пароль: "
                           Style="{StaticResource CommonBlock}"></TextBlock>
                <PasswordBox Password="{Binding PasswordText}"
                         Width="200"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Войти"></Button>
                <Button Content="Выход"></Button>
            </StackPanel>
        </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
